{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "lib": ["es2015", "dom"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
